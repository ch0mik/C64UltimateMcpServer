Content-Type: application/json
Accept: application/json, text/event-stream

{
  "jsonrpc": "2.0",
  "id": 5,
  "method": "tools/call",
  "params": {
    "name": "ultimate_mount_disk",
    "arguments": {
      "drive": "a",
      "file": "/Roms/disk.d64"
    }
  }
}

